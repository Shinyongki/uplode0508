{
  "version": 2,
  "builds": [
    { 
      "src": "server.js", 
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18.x"
      }
    },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/auth/(.*)", "dest": "server.js" },
    { "src": "/(.*)", "dest": "server.js" }
  ],
  "env": {
    "USE_SERVICE_ACCOUNT": "true",
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--openssl-legacy-provider"
  }
}